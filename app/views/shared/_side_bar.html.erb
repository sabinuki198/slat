<div class="side-back">
  <div class="search-form">
    <%= form_with url: "#", method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <%@user_content.each do |content|%>
      <% if content.present? %>
        <div class=category-list>
          <ul class="category-title" type="disc"><%= content.first.category.name %>
            <% content.each do |t| %>
              <li class="title-list">|ー <%= link_to t.title, content_path(t.id), {class: "content-title"} %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <div class=category-list>
      <ul class="category-title" type="disc">
          <li class="title-list">|ーサンプルテキスト</li>
          <li class="title-list">|ーサンプルテキスト</li>
      </ul>
    </div>
  <% end %>
</div>